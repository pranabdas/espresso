&CONTROL
  calculation = 'nscf',
  prefix = 'silicon',
  outdir = './tmp/'
  pseudo_dir = '../pseudos/'
  verbosity = 'high'
/

&SYSTEM
  ibrav =  2,
  celldm(1) = 10.26,
  nat =  2,
  ntyp = 1,
  ecutwfc = 40
  nbnd = 40
  nosym = .true.
  noinv = .true.
/

