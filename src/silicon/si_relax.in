&control
    calculation = 'vc-relax'
    prefix = 'silicon'
    outdir = './tmp/'
    pseudo_dir = './pseudos/'
    etot_conv_thr = 1e-5
    forc_conv_thr = 1e-4
/

&system
    ibrav=2, celldm(1) =14,
    nat=2, ntyp=1,
    ecutwfc=30
/

&electrons
    conv_thr=1e-8
/

&ions
/

&cell
    cell_dofree='ibrav'
/

ATOMIC_SPECIES
  Si  28.0855  Si.pz-vbc.UPF

ATOMIC_POSITIONS (alat)
  Si 0.00 0.00 0.00 0 0 0
  Si 0.25 0.25 0.25 0 0 0

K_POINTS (automatic)
  6 6 6 1 1 1
